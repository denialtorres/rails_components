<%= render DashboardComponent.new(title: "Dashboard",
                                  description: "this is a custom dashboard") %>

<%= render CardComponent.new do %>
  <%= render DashboardComponent.new(title: "Title Card",
                                    description: "this is my card") %>
<% end %>

<%= render ModalComponent.new do |component| %>
  <% component.title = "Are you sure?" %>

  <% component.description do %>
    This Action is destructive and cannot be undone.
  <% end %>

  <% component.actions do %>
    <%= button_tag "Cancel" %>
    <%= button_tag "Accept" %>
  <% end %>
<% end %>

<%= link_to 'Download PDF', download_pdf_path(format: :pdf), class: 'btn btn-primary' %>
